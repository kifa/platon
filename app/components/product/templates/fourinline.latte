<div class="col-xs-12 col-sm-3 col-md-3">
<div class="thumbnail miniproduct" n:snippet="product">
            
           {if $user->isInRole('admin')}

 
{control adminPanelControl:ProductMini $product->ProductID, $product->ProductStatusID, $product->CategoryID}
    
        {/if}
            
            <div class="col-md-12 col-xs-12 pull-left row">
                    {if $pieces > 5}
            <span class="label label-info" title="{_product.front.in-stock}">{$pieces}</span>
                    {elseif $pieces > 0}
            <span class="label label-warning">{$pieces} {_product.front.last}</span>
                    {else}
            <span class="label label-default"> {_product.front.sold-out}</span>
                    {/if}
            {if $product->ProductStatusID == 3}
                <span class="label label-danger" title="{_product.front.popular}"><i class="icon-thumbs-up icon-large"></i> {_'HOT'}</span>
            {/if}
            {if $product->SALE > 1}
                <span class="label label-warning"><i class="icon-money icon-large"></i> {_product.front.sale}</span>
            {/if}
            </div>
    
            
    <div class="row">
            <a class="col-md-11 col-xs-11" href="{plink Product:product $product->ProductID, $product->ProductSeoName}"> 
                      {if $photo}
                           <img src="{$basePath}/images/{$albumID}/m-{$photo->PhotoURL}" class="img-circle img-responsive medium" alt="{$product->ProductName}"/>
                      {else}
                           <img src="{$basePath}/images/no_image.jpg" class="img-circle img-responsive medium" alt="no image"/>
                      {/if}
               </a>          
                   
            <div class="col-md-11 col-xs-11 productCaption">
              <h4><a class="text-success" href="{plink Product:product $product->ProductID, $product->ProductSeoName}">{$product->ProductName|truncate:40}</a></h4>
            </div>
    </div>
     <div class="row productButtons">
            <div class="col-md-12 btn-group btn-group-justified">
                
                        <a href="{plink addToCart! $product->ProductID, "1"}" class="ajax btn btn-success col-md-6 addToCart"><i class="icon-shopping-cart icon-large"></i> {_control.button.buy}</a>
                         <a href="{plink Product:product $product->ProductID, $product->ProductSeoName}" class="btn btn-primary col-md-5"><i class="icon-info-sign icon-large viewProduct"></i> {_control.button.view}</a>         
            </div> 
            
            <div class="col-md-12 price">
                
                <p class="text-success text-center lead">{if $product->SALE > 1}<span class="muted col-md-1" style="text-decoration: line-through; font-size: 50%;">{$product->SellingPrice},-</span>{/if} {$product->FinalPrice},-</p>
               
            </div>
          </div>
</div>
</div>