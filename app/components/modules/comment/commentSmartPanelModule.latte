{if $status == 1}
<h3>{_'Latest Comments & Reviews'} <small><a href="{plink SmartPanel:default}">{_'More comments'} <i class="icon-comments"></i></a></small></h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>{_'Date'}</th>
                            <th>{_'Subject'}</th>
                            <th>{_'Name'}</th>
                            <th>{_'Status'}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {foreach $comments as $id => $comment}

                        <tr class="">
                            <td>{$id}</td>
                            <td>{$comment->DateOfAdded|date:'%d.%m.%Y'}</td>
                            <td><a href="{plink Product:product $comment->ProductID}">{$comment->CommentTitle}</a></td>
                            <td>{$comment->Author},-</td>
                            <td><a href='{link deleteComment! $id}'><i class='icon-trash'></i></a></td>
                        </tr>

                        {/foreach}
                    </tbody>
                </table>
{/if}