
{block content}




<div class="row">
    <div class="span12">
        <h2>Your cart</h2>


<table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Product Name</th>
                  <th>Amount</th>
                  <th>Unite price</th>
                  <th>Total price</th>
                  <th>X</th>
                </tr>
              </thead>
              <tbody>
{foreach $cart as $id => $products}
    {foreach $products as $amnt => $product}
        {var $total = $amnt * $product->FinalPrice}
                <tr>
                  <td>1</td>
                  <td>{$product->ProductName}</td>
                  <td>{$amnt} pcs
                        <a href="{plink Order:addAmount $id}"><i class="icon-plus-sign"></i></a>
                        <a href="{plink Order:removeAmount $id}"><i class="icon-minus-sign"></i></a></td>
                  <td>{$product->FinalPrice},-</td>
                  <td>{$total},-</td>
                  <td><i class="icon-trash"></i><a n:href="Order:removeItem $id"> remove</a></td>
                </tr>            
    {/foreach}
{/foreach}
              </tbody>
            </table>


        <div class="span5">
            <fieldset>
                <legend>About you</legend>

    {control cartForm}
            </fieldset>
        </div>
            <div class="span5">
                <fieldset>
                    <legend>Shiping info</legend>

    {control shippingForm}
                </fieldset>
            </div> 
        </div> 
    </div>
</div>




{/block}