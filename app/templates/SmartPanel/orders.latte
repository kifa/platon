{block pageheader}
{if $user->isLoggedIn()}
<div class="page-header">
<h1 n:block="title"><i class="icon-spinner"></i> Orders <small>Here you see all orders placed in your shop.</small></h1>
{/if}

<div class="row">
            <div class="span10">
                <a href="{plink SmartPanel:default }"><i class="icon-lightbulb"></i> {_"Back to SmartPanel"}</a> |
                <a href="#"><i class="icon-large icon-bar-chart"></i> {_"Stats"}</a>
            </div>
        </div>
</div>
{/block}
{block content}
<div class="span10"> 
{if $user->isLoggedIn()}

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Total Payment</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {foreach $orders as $id => $order}
                
                <tr class="{if $order->StatusID == 3}success {elseif $order->StatusID == 2} info {else} warning {/if}">
                    <td>{$id}</td>
                    <td>{$order->DateCreated|date:'%d.%m.%Y'}</td>
                    <td><a href="{plink SmartPanel:orderDetail $id}">{$order->Name}</a></td>
                    <td>{$order->TotalPrice},-</td>
                    <td>{$order->StatusName}</td>
                </tr>
                
                {/foreach}
            </tbody>
        </table>

{/if}
</div>
{/block}

{block sidebar}
<div class="span2"> 
  {if $user->isLoggedIn()}
        {control menu:admin}
        {/if}
</div>
{/block}