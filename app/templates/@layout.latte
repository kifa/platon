<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{block #title|striptags|trim|strip} {/block} {$shopName}</title>
        <meta name="description" content="{block #metadesc|striptags|strip|trim} {$shopDescription} {/block}">
        <meta name="robots" content="{$robots}" n:ifset="$robots">
        <link rel="shortcut icon" href="{$basePath}/favicon.ico">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        
        {control css}

        
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
        
       
        {ifCurrent Order:cart}
                <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
                {/ifCurrent}

	{block head}{/block}
    </head>
   
<body>
    <script> document.body.className+=' js' </script>

{include './components/languageBar.latte'}
    

<div class="shopHead margin5"> 
  <div class="masterhead">
<div class="container supercontainer">
    
        <div class="row">
            <a href="{plink Homepage:default}" class="col-md-12"><h1><img src="{$basePath}/images/logo/{$shopLogo}" alt="{$shopName}" title="{$shopName}" class="img-responsive col-sx-12"></h1></a>

            
            
            
            
        
        </div>
       </div>
    </div> 
    <div class="navHead">
  <div class="container">    
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                         <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                             <span class="menuButton">{_'Menu'} <i class="icon-reorder icon-large"></i></span>
                          </button>
                    </div>
                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                             <ul class="nav nav-pills navbar-nav" n:snippet="menu">
                                 {ifCurrent Product:products}
                                     {control menu 1, $category->HigherCategoryID}
                                 {else}
                                    {ifCurrent Product:product}
                                     {control menu 1, $product->CategoryID}
                                    {else}
                                        {control menu 1}
                                     {/ifCurrent}
                                 {/ifCurrent}
                            </ul>
                            {control searchControl:menu}
                            
                            </div>
                        </nav>
                    </div>
                </div>

    </div>
         </div>
<div class="shopMessages" n:snippet="flashMessages">
            {foreach $flashes as $flash}
               <div class="{$flash->type} text-center">
                   <button type="button" class="close" data-dismiss="alert">&times;</button>
             {$flash->message}</div>
             {/foreach}
</div>


</div> 

    {block #slider}
    {if $slider}
<div class="shopSlider">   
 <div class="container supercontainer">

   
        
 </div></div>
    {/if}
    {/block}
    
    <div class="shopContent">   
 <div class="container supercontainer">
          {block #bread}{/block}

    <div id="content" class="row"> 
     

        {block #sidebars}

<div class="col-md-2 shopSidebar col-sm-12 col-xs-12">  
            

        <div class="hidden-xs hidden-sm">        
           
                    <ul class="nav nav-pills nav-stacked">
                                     {control menu:side}
                            
                        </ul>
                            
        
                    {*block #sidebar}
                    {/block*}
               
                </div>
    </div>
        {/block}
        
        
        {block contents}
    <div class="col-md-10 shopInnerContent" n:snippet="content">
       
        
        
        {block #pageheader}

       {/block}
            
            {block #content}
                   
            {/block}

    </div>     
        {/block}

            
        
    </div>
 </div>
    </div>
        <div class="shopFooter">   
 <div class="container">

    <div class="footer">         
        <div class="col-md-9 margin5">
            
           {control menu:footer}
            
            <p>{_'Cookies help us deliver our services. By using our services, you agree to our use of cookies.'}</p>
        </div>

        <div class="col-md-3">     
            <div class="col-md-6 text-left">
            &COPY; 2013 {$shopName} 
            </div>
            <div class="col-md-6 text-right">
                Powered by <a href="http://birnex.com">BIRNE<sup>shop</sup></a>
            </div>
        </div>
    </div>
                
{block modals}
  {if $user->isInRole('admin')}
                <div id="addCategory" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                   <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 id="myModalLabel"><i class="icon-pencil"></i> {_'Add Category'}</h3>
                    </div>
                    <div class="modal-body">
                        <p>{_'Please fill in these information'}</p>
                       {control addCategoryForm}
                    </div>
                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">{_'Close without adding'}</button>
                    </div>
                </div> </div> </div>

                <div id="addStaticText" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 id="myModalLabel"><i class="icon-pencil"></i> {_'Add Text'}</h3>
                    </div>
                    <div class="modal-body">
                        <p>{_'Please fill in these information'}</p>
                      {control addStaticTextForm}
                    </div>
                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">{_'Close without adding'}</button>
                    </div>
                </div> </div> </div>
     
<div id="editDesign" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editDesign" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title"><i class="icon-tint"></i> {_'Redesign your eshop'}</h4>
        </div>
        <div class="modal-body">
          <div class="tabbable">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#editLayout" data-toggle="tab"><i class=""></i> {_'Layout'}</a></li>
                    <li><a href="#editMenu" data-toggle="tab"><i class=""></i> {_'Menu'}</a>
                    <li><a href="#editProducts" data-toggle="tab"><i class=""></i> {_'Products'}</a></li>
                    <li><a href="#editProduct" data-toggle="tab"><i class=""></i> {_'Product'}</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="editLayout">
<div class="btn-group">
        <a class="btn btn-small pull-right dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-screenshot"></i> {_'Shop layout'}
            <span class="caret"></span>
        </a>
                                <ul class="dropdown-menu">
            <li><a n:href="setShopLayout! 'ShopLayout', ''" >Menu+right</a></li>
            <li><a n:href="setShopLayout! 'ShopLayout', 2" >Menu+left</a></li>
            <li><a n:href="setShopLayout! 'ShopLayout', 3" >Text+left</a></li>
            <li><a n:href="setShopLayout! 'ShopLayout', 4" >Text+right</a></li>
        </ul>
</div>

</div>

             
                    <div class="tab-pane" id="editMenu">
                        <p>{_'Add one of previously added Spec, or enter a new one bellow. Then click Add spec bellow.'}</p>

                    </div>
 
                    <div class="tab-pane" id="editProducts">
<div class="btn-group">
        <a class="btn btn-small pull-right dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-screenshot"></i> {_'Products layout'}
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a n:href="setShopLayout! 'ProductMiniLayout', ''" >{_'4 in line'}</a></li>
            <li><a n:href="setShopLayout! 'ProductMiniLayout', 2" >{_'2 in line'}</a></li>
            <li><a n:href="setShopLayout! 'ProductMiniLayout', 3" >{_'Singleton'}</a></li>
            <li><a n:href="setShopLayout! 'ProductMiniLayout', 4" >{_'Big photo'}</a></li>
        </ul>
</div>

                    </div>

                    <div class="tab-pane" id="editProduct">
<div class="btn-group">
        <a class="btn btn-small pull-right dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-screenshot"></i> {_'Product layout'}
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a n:href="setShopLayout! 'ProductLayout', 1" >layout 1</a></li>
            <li><a n:href="setShopLayout! 'ProductLayout', 2" >layout 2</a></li>
            <li><a n:href="setShopLayout! 'ProductLayout', 3" >layout 3</a></li>
            <li><a n:href="setShopLayout! 'ProductLayout', 4" >layout 4</a></li>
        </ul>
</div>

                    </div>
                </div>
            </div>
        </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">{_'Close without saving'}</button>
    </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div>  
     
{/if}
   
    {control modalControl:tracking}
                
    {block #modal}
    {/block}
{/block}  
            </div>
        </div>
	
                
{block scripts}
        
    
        {control js}

        {include 'components/GA.latte', GA => $GA}
        <script>

        $(document).ready(function() {
                $(".imgLiquid").imgLiquid({
                    fill: true,
                    fadeInTime: 0,
                    delay: 0,
                    horizontalAlign: "left",
                    verticalAlign: "top"});

                $('#trackingButton').toggle(function(){
                    $('#tracking').modal('show');
                  },
                  function() {
                      $('#tracking').modal('hide');
                  });
             {if $user->isInRole('admin')}   
                    $('#addCategoryButton').toggle(function(){
                   $('#addCategory').modal('show');
                 },
                 function() {
                     $('#addCategory').modal('hide');
                 });

                 $('#addStaticTextButton').toggle(function(){
                   $('#addStaticText').modal('show');
                 },
                 function() {
                     $('#addStaticText').modal('hide');
                 });

            {/if}

            });
        </script>


    {snippet script}
        <script>

            $('a.ajax').click(function(){
                $(this).html('<i class="icon-spinner icon-spin"></i>');
            });
            
             $('input[name="srch"]').click(function() { 
                $('input[name="srch"]').attr('class', 'btn btn-default disabled');
                $('input[name="srch"]').attr('value', '{_'Searching...'}');
            });

            
            $('.addToCart').click(function() { 
                $(this).attr('class', 'btn btn-success disabled');
                $(this).text('{_'Adding to cart...'}');
            });
            
            $('#editDesignButton').toggle(function(){
                $('#editDesign').modal('show');
              },
              function() {
                  $('#editDesign').modal('hide');
              });
        </script>
    {/snippet}

    {block #script}
    {/block}

	{/block}   
        
        
    </body> 
</html>