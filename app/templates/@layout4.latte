<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{block #title|striptags|trim|strip} {/block} {$shopName}</title>
        <meta name="description" content="{block #metadesc|striptags|strip|trim} {$shopDescription} {/block}">
        <meta name="robots" content="{$robots}" n:ifset="$robots">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {control css}
        
        <link rel="shortcut icon" href="{$basePath}/favicon.ico">

        {ifCurrent Order:cart}
                <script src="{$basePath}/js/jquery.js"></script>
                {/ifCurrent}

	{block head}{/block}
    </head>
   
<body>
    <script> document.body.className+=' js' </script>

    
{include './components/languageBar.latte'}
    

<div class="shopHead"> 

    
<div class="container supercontainer container-fluid">
  
    <div class="masterhead">
        <div class="row-fluid">
            <a href="{plink Homepage:default}" class="span5"><h1><img src="{$basePath}/images/logo/{$shopLogo}" alt="{$shopName}" title="{$shopName}"></h1></a>

            {control menu:top}
            
        </div>
        <div class="row">
            <div class="span12">
                <div class="navbar">
                    <div class="navbar-inner">
                        <div class="container">
                            <a class="btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                <strong class="btn pull-right">{_'Menu'} <i class="icon-reorder"></i></strong>
                            </a>
                            <div class="nav-collapse collapse">
                            <ul class="nav" n:snippet="menu">
                                {control menu:side}

                            </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

            {snippet flashMessages}   
            {foreach $flashes as $flash}
               <div class="{$flash->type} span10">
                   <button type="button" class="close" data-dismiss="alert">&times;</button>
             {$flash->message}</div>
             {/foreach}
             {/snippet}

 </div> 
</div> 

    {block #slider}
    {if $slider}
<div class="shopSlider">   
 <div class="container supercontainer container-fluid">

   
        
 </div></div>
    {/if}
    {/block}
    
    <div class="shopContent">   
 <div class="container supercontainer container-fluid">
          {block #bread}{/block}

    <div id="content" class="row-fluid"> 
           
      

                
        {block contents}
            
        <div class="span10 shopInnerContent" n:snippet="content">
           {block #pageheader}

                   {/block}

            {block #content}
                   
        
            {/block}
        </div>
        {/block}
        
        {block sidebars} 
                 <div class="span2 shopSidebar">            
               
                {if $user->isInRole('admin')}
                   {control menu:admin}
                {/if}
                    
                    <ul class="nav nav-list">
                            <li class="nav-header">{_'Menu'}</li>
                                     {control menu 1}
                            
                        </ul>
                            
        
                    {*block #sidebar}
                    {/block*}

                  </div>
            {/block}
        
            

</div>
 </div>
    </div>
        <div class="shopFooter">   
 <div class="container supercontainer container-fluid">
          

    <div class="footer">         
        <div class="span10">
            <hr>
           {control menu:footer}
        </div>
        <div class="span12">     
            &COPY; Birne shop 2013
        </div>
    </div>
                
{block modals}
  {if $user->isInRole('admin')}
        <div id="addCategory" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel"><i class="icon-pencil"></i> {_'Add Category'}</h3>
            </div>
            <div class="modal-body">
                <p>{_'Please fill in these information'}</p>
               {control addCategoryForm}
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">{_'Close without adding'}</button>
            </div>
        </div>

        <div id="addStaticText" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel"><i class="icon-pencil"></i> {_'Add Text'}</h3>
            </div>
            <div class="modal-body">
                <p>{_'Please fill in these information'}</p>
              {control addStaticTextForm}
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">{_'Close without adding'}</button>
            </div>
        </div>
    {/if}
   
    {control modalControl:tracking}
                
    {block #modal}
    {/block}
        
{/block}  
            </div>
        </div>
    </div>	

{block scripts}
       
        {control js}

        {include 'components/GA.latte', GA => $GA}

        <script>

        $(document).ready(function() {
                $(".imgLiquid").imgLiquid({
                    fill: true,
                    fadeInTime: 0,
                    delay: 0,
                    horizontalAlign: "left",
                    verticalAlign: "top"});

                $('#trackingButton').toggle(function(){
                    $('#tracking').modal('show');
                  },
                  function() {
                      $('#tracking').modal('hide');
                  });
             {if $user->isInRole('admin')}   
                    $('#addCategoryButton').toggle(function(){
                   $('#addCategory').modal('show');
                 },
                 function() {
                     $('#addCategory').modal('hide');
                 });

                 $('#addStaticTextButton').toggle(function(){
                   $('#addStaticText').modal('show');
                 },
                 function() {
                     $('#addStaticText').modal('hide');
                 });

            {/if}

            });
        </script>


    {snippet script}
        <script>

            $('a.ajax').click(function(){
                $(this).html('<i class="icon-spinner icon-spin"></i>');
            });

        </script>
    {/snippet}

    {block #script}
    {/block}

	{/block}   
    </body> 
</html>